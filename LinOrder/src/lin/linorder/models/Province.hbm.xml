<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="lin.linorder.models.Province" table="province">
		<!-- 配置主键 -->
		<id name="provinceID">
			<generator class="native" />
		</id>
		<!-- 配置其他属性 -->
		<property name="province" />
		<!-- 配置外键 -->
		<list name="citys" table="city" inverse="true" cascade="save-update">
			<key column="provinceID" not-null="true" />
			<list-index column="cityID" />
			<one-to-many class="lin.linorder.models.City" />
		</list>
	</class>
</hibernate-mapping>