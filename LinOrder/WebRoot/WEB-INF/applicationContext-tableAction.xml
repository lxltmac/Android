<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	
	<!-- dao -->
	<bean id="tableDao" class="lin.linorder.dao.table.TableDao" abstract="false"
		lazy-init="default" autowire="default" dependency-check="default">
		<property name="sessionFactory" >
			<ref bean="sessionFactory"/>
		</property>
	</bean>
	
	<!-- service -->
	<bean id="tableService" class="lin.linorder.service.table.TableService"  scope="prototype">
        <property name="tableDao">
           <ref bean="tableDao" />
        </property>
    </bean>
    
	<!-- action -->
	<bean id="tableAction" class="lin.linorder.action.table.TableAction"  scope="prototype">
        <property name="tableService">
           <ref bean="tableService" />
        </property>
        <property name="table">
           <ref bean="table" />
        </property>
    </bean>
    <bean id="tableShowAction" class="lin.linorder.action.table.TableShowAction"  scope="prototype">
        <property name="tableService">
           <ref bean="tableService" />
        </property>
        <property name="table">
           <ref bean="table" />
        </property>
    </bean>
    
	<!-- models -->
	<bean id="table" class="lin.linorder.models.table.Table"  scope="prototype">
	</bean> 
	
</beans>