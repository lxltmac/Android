<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="lin.linorder.models.goods.Food" table="food">
		<!-- 配置主键 -->
		<id name="id">
			<generator class="native" />
		</id>
		<!-- 配置其他属性 -->
		<property name="foodName" />
		<property name="description" />
		<property name="img" />
		<property name="price" />
		<!-- 配置外键 -->
		<!-- 去掉了cascade="save-update"防止了更新时候出现的“ a different object with the same identifier value was already associated with the session” 问题-->
		<many-to-one name="foodStyle" class="lin.linorder.models.goods.FoodStyle" column="foodStyleId" not-null="true"  fetch="select" lazy="false" />
	</class>
</hibernate-mapping>